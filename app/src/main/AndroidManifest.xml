<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppinglist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_grocery"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_grocery_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingList">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AddProductActivity"
            android:label="@string/activity_add_product" />
        <activity
            android:name=".view.ThemesActivity"
            android:label="@string/menu_item_themes" />
        <activity
            android:name=".view.CreateThemeActivity"
            android:label="@string/create_theme" />
        <activity android:name=".control.GalleryActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
    </application>

</manifest>